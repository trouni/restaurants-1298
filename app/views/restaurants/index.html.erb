<div data-controller="insert-in-list" class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <div data-controller="toggle" class="position-relative d-flex justify-content-between align-items-center">
        <h1>Restaurants</h1>
        <i class="fa-solid fa-plus" data-action="click->toggle#fire"></i>
        <div
      class="position-absolute top-0 end-0 bg-white p-3 shadow rounded d-none"
      style="z-index: 100;"
      data-toggle-target="toggleElement"
      data-insert-in-list-target="formWrapper"
    >
          <%= render 'restaurants/form', restaurant: @restaurant %>
        </div>
      </div>
      <div class="cards" data-insert-in-list-target="list">
        <% @restaurants.order(created_at: :desc).each do |restaurant| %>
          <%= render 'restaurants/card', restaurant: restaurant %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <%= render 'restaurants/map', markers: @markers %>
    </div>
  </div>
</div>
