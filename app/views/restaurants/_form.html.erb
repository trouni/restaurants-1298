<%= simple_form_for restaurant, data: { action: 'submit->insert-in-list#submit'} do |f| %>
  <%= f.input :name %>
  <%#= f.input :rating, input_html: { min: 0, max: 5 } %>
  <%= f.input :address,
      input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
      wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
  <%= f.input :opening_date, as: :string, input_html: { data: { controller: "datepicker" } } %>
  <%= f.submit class: 'btn btn-primary mt-2' %>
<% end %>
